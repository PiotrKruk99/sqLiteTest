@page
@model BaseOperModel
@{
    ViewData["Title"] = "Operations on database";
}
<h1>@ViewData["Title"]</h1>

<p>Database operations page.</p>
<hr>
<form method="post">
    <label>Name:</label><input asp-for="Person.Name"><br>
    <label>Surname:</label><input asp-for="Person.Surname"><br>
    <label>Age:</label><input asp-for="Person.Age"><br>
    <button type="submit">Add</button>
</form>
<hr>
@foreach (Person person in Model.Persons)
{
    <ul>
        <li>Name: @person.Name</li>
        <li>Surname: @person.Surname</li>
        <li>Age: @person.Age</li>
    </ul>
}